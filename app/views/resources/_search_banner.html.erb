<div class= "container">
  <div class= "searchstuff">
    <%= simple_form_for :search, url: resources_path, method: "GET" do |f| %>
      <%=
          text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: t("Search By City")
          %>
  </div>

  <div class="categories d-flex justify-content-between align-items-center text-align-center">
    <% @tags.each do |tag|  %>
      <div class ="category-card">
        <% if tag.name == "Housing" %>
          <%= check_box_tag "keywords[]" , tag.name, params[:keywords].present? ? params[:keywords].include?(tag.name) : false, id: "checkbox1", :style => 'visibility: hidden'%>
          <label for="checkbox1"><i class="fas fa-home fa-3x m-2 p-3" aria-hidden="true"></i><%= t("Housing") %></p></label>

        <% elsif tag.name == "Financial help" %>
          <%= check_box_tag "keywords[]" , tag.name, params[:keywords].present? ? params[:keywords].include?(tag.name) : false, id: "checkbox2", :style => 'visibility: hidden'%>
          <label for="checkbox2"><i class="fas fa-home fa-3x m-2 p-3" aria-hidden="true"></i><%= t("Financial help") %></p></label>

        <% elsif tag.name == "Everyday" %>
          <%= check_box_tag "keywords[]" , tag.name, params[:keywords].present? ? params[:keywords].include?(tag.name) : false, id: "checkbox3", :style => 'visibility: hidden'%>
          <label for="checkbox3"><i class="fas fa-home fa-3x m-2 p-3" aria-hidden="true"></i><%= t("Everyday") %></p></label>

        <% elsif tag.name == "Education" %>
          <%= check_box_tag "keywords[]" , tag.name, params[:keywords].present? ? params[:keywords].include?(tag.name) : false, id: "checkbox4", :style => 'visibility: hidden'%>
          <label for="checkbox4"><i class="fas fa-home fa-3x m-2 p-3" aria-hidden="true"></i><%= t("Education") %></p></label>

        <% elsif tag.name == "Employment" %>
          <%= check_box_tag "keywords[]" , tag.name, params[:keywords].present? ? params[:keywords].include?(tag.name) : false, id: "checkbox5", :style => 'visibility: hidden'%>
          <label for="checkbox5"><i class="fas fa-home fa-3x m-2 p-3" aria-hidden="true"></i><%= t("Employment") %></p></label>

        <% elsif tag.name == "Health" %>
          <%= check_box_tag "keywords[]" , tag.name, params[:keywords].present? ? params[:keywords].include?(tag.name) : false, id: "checkbox6", :style => 'visibility: hidden'%>
          <label for="checkbox6"><i class="fas fa-home fa-3x m-2 p-3" aria-hidden="true"></i><%= t("Health") %></p></label>

        <% elsif tag.name == "Community" %>
          <%= check_box_tag "keywords[]" , tag.name, params[:keywords].present? ? params[:keywords].include?(tag.name) : false, id: "checkbox7", :style => 'visibility: hidden'%>
          <label for="checkbox7"><i class="fas fa-home fa-3x m-2 p-3" aria-hidden="true"></i><%= t("Community") %></p></label>

        <% elsif tag.name == "Visa" %>
          <%= check_box_tag "keywords[]" , tag.name, params[:keywords].present? ? params[:keywords].include?(tag.name) : false, id: "checkbox8", :style => 'visibility: hidden'%>
          <label for="checkbox8"><i class="fas fa-home fa-3x m-2 p-3" aria-hidden="true"></i><%= t("Visa") %></p></label>

        <% else %>
          <%= check_box_tag "keywords[]" , tag.name, params[:keywords].present? ? params[:keywords].include?(tag.name) : false, id: "checkbox9", :style => 'visibility: hidden'%>
          <label for="checkbox9"><i class="fas fa-home fa-3x m-2 p-3" aria-hidden="true"></i><%= t("Legal") %></p></label>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class= "searchbutton">
      <%= f.submit t("Search"), class: "orgbutton btn btn-secondary" %>
      <%= link_to t("Clear all"), resources_path, class: "text-decoration-none clear" %>
  <% end %>
  </div>
</div>
