

<div class="alignmapandsidenav">

  <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div id="main">
  <div id="bottom">
    <div id="lists">
      <div class="sidenav scroll ">
        <div class="heading">
          <thead>
            <th>Resources</th>
            <tr> <%= "(#{@resources.length})"%></tr>
          </thead>
        </div>
        <% @resources.each do |resource| %>
            <div class= "card m-2 p-2 ">
              <div class= "resource_infos">
                  <%# <p class="name"> %>
                  <%#= resource.name %>
                  <%# </p> %>
                  <p><%= link_to resource.name, :anchor => 'map', class: "nav-link" %></p>
                  <%# <p class="name"> %>
                  <%#= resource.categories.pluck(:name).join(',') %>
                  <%# </p> %>
                  <%# <p class="name"> %>
                  <%#= resource.description %>
                  <%# </p> %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>



</div>
