<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="logo-text"><%= link_to image_tag("aushello_logo.png"), root_path, class: "navbar-brand" %></div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <li class="nav-item">
    <div class ="languagelink">
        <%= link_to t("English"), resources_path(locale: :en) %>
        <%= link_to t("عربى"), resources_path(locale: :ar) %>
        <%= link_to t("தமிழ்"), resources_path(locale: :ta) %>
        <%= link_to t("Español"), resources_path(locale: :es) %>
        <%= link_to t("فارسی"), resources_path(locale: :fa) %>
    </div>
  </li>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <% if user_signed_in? && current_user.admin? %>
        <% if params[:controller] == 'favourites' %>
          <li class="nav-item">
            <%= link_to t("Resources"), resources_path, class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item">
          <%= link_to t("Add a Resource"), new_resource_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://i.ibb.co/Df06tjS/AUSHELLOAVATAR.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to t("Dashboard"), dashboard_index_path(I18n.locale,current_user), class: "dropdown-item" %>
            <%= link_to t("My favourites"), resource_favourites_path(I18n.locale,current_user), class: "dropdown-item" %>
            <%= link_to t("Log Out"), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% elsif user_signed_in? %>
        <% if params[:controller] == 'favourites' %>
          <li class="nav-item">
            <%= link_to t("Resources"), resources_path, class: "nav-link" %>
          </li>
        <% end %>

        <li class="nav-item">
          <%= link_to t("Add a Resource"), new_resource_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://i.ibb.co/Df06tjS/AUSHELLOAVATAR.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to t("My favourites"), resource_favourites_path(I18n.locale,current_user), class: "dropdown-item" %>
            <%= link_to t("Log Out"), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to t("Add a Resource"), new_resource_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t("Login"), new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
